CREATE TABLE public."JOGADORES"
(
  "PONTUACAO" character varying(255),
  "NOME" character varying(255) NOT NULL,
  CONSTRAINT "NOME_PK" PRIMARY KEY ("NOME")
)

CREATE TABLE public."PERGUNTAS"
(
  "DISCIPLINA" character varying(5) NOT NULL,
  "PERGUNTA" character varying(255) NOT NULL,
  "ID_PERGUNTA" bigint NOT NULL,
  CONSTRAINT "PK_ID_PERGUNTA" PRIMARY KEY ("ID_PERGUNTA")
)

CREATE TABLE public."RESPOSTAS"
(
  "RESPOSTA" character varying(255),
  "ID_PERGUNTA" bigint,
  "ID_RESPOSTA" bigint NOT NULL,
  "RESPOSTA_VERDADEIRA" boolean,
  CONSTRAINT "PK_ID_RESPOSTA" PRIMARY KEY ("ID_RESPOSTA"),
  CONSTRAINT "FK_ID" FOREIGN KEY ("ID_PERGUNTA")
      REFERENCES public."PERGUNTAS" ("ID_PERGUNTA") MATCH SIMPLE
      ON UPDATE NO ACTION ON DELETE NO ACTION
)